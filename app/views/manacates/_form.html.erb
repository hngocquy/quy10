       <div class="pd-20 card-box mb-30">
          <div class="clearfix">
            <div class="pull-left">
              <h4 class="text-blue h4">category</h4>
            </div>
            <div class="pull-right">
             <%= link_to 'Show', @manacate, class: "btn btn-primary btn-sm scroll-click" %> |
