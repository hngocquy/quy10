                  </div>
                   <div class="form-group row">
                       <%= form.label :desc, class: "col-sm-12 col-md-10" %>
                    <div class="col-sm-12 col-md-10">
                         <%= form.text_area :desc, class: "form-control", placeholder: "Nhập tên danh mục" %>
                    </div>
                  </div>
                  
              
               <%= form.submit class: "btn btn-primary btn-sm scroll-click" %>
       <% end %>
