<!DOCTYPE html>
<html>
<head>
<title>Index User Interface</title>

<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

</head>

<body>
    <div class="container">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Category</th>
                    <th colspan ="2"></th>
                </tr>
            </thead>
            <tbody>
                <% @data_category.each do |row|%>
                    <tr>
                        <td><%= row.id%></td>
                        <td><%= row.name_category%></td>
                        <td onclick="openDialogEditCategory(<%= row.id%>)">Sửa</td>
                        <td onclick="openDialogEditCategory(<%= row.id%>)">Xóa</td>
                    </tr>
                <%end%>
            </tbody>
        </table>
    </div>
    
<%# <td data-toggle="modal" data-target="#modalEditCategory">Sửa</td> %>
  <!-- Modal -->
<div class="modal fade" id="modalEditCategory" tabindex="-1" role="dialog" aria-labelledby="modalEditCategory" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
</body>


<%# axios %>
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>

<!-- jQuery library -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<!-- Popper JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>

<!-- Latest compiled JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<script>
    const openDialogEditCategory = async (id_category) =>{
        try {
            $("#modalEditCategory").modal()
        } catch (error) {
            console.log(error);
        }
    }
</script>
</html>

