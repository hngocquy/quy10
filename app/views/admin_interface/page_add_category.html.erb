<!DOCTYPE html>
<html>
<head>
<title>Index User Interface</title>

<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

</head>

<body>
    <h1>Thêm danh mục</h1>
    <div class="container">
        <div class="form-group">
            <label for="inputCategory">Name category</label>
            <input type="text" class="form-control" id="inputCategory">
        </div>
        <button type="button" class="btn btn-outline-primary" onclick="addCategory()">Thêm</button>
    </div>    
    
</body>


<!-- jQuery library -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<!-- Popper JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>

<!-- Latest compiled JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<script src="https://unpkg.com/axios/dist/axios.min.js"></script>


<script>
    const addCategory = async () => {
        try {
            const inputCategory = document.getElementById("inputCategory").value;
            const formData = new FormData();
            formData.append("inputCategory", inputCategory)
            const result = await axios.post('/addCategory',formData, {
             headers: {'Content-Type': 'multipart/form-data'}
            });

            const body = result.data;
            if (body.msg == 'ok'){
                alert('Done');
            }
        } catch (error) {
            console.log(error);
        }
    }
</script>

</html>

